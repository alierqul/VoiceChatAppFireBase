<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:layout_marginTop="@dimen/paddingL">

    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="75dp"
        android:layout_height="@dimen/playBtnHeight"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_play_circle" />
    <androidx.cardview.widget.CardView
        android:id="@+id/lyt_seekbar"
        android:layout_toRightOf="@id/btn_play"
        android:layout_toLeftOf="@id/voiceSend"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heightTextMessage"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">
    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/headerM"
                    android:text="merhaba dünya" />


            <SeekBar
                android:id="@+id/player_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

</LinearLayout>
    </androidx.cardview.widget.CardView>
    <RadioGroup
        android:layout_below="@id/lyt_seekbar"
        android:gravity="center"
        android:id="@+id/rgEffectgroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rd_Radio"
            android:text="Radyo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rd_Robot"
            android:text="Robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rd_Case"
            android:text="Yankılı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rd_ChipMunk"
            android:text="Sincap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:checked="true"
            android:id="@+id/rd_orinal"
            android:text="Orijinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RadioGroup>
    <ImageView
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/voiceSend"
        android:layout_width="75dp"
        android:layout_height="@dimen/playBtnHeight"
        android:src="@drawable/ic_send" />
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progressChoseEffect"
        android:layout_width="wrap_content"
        android:indeterminateTint="#000"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</RelativeLayout>