<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:minWidth="200dp"
    android:layout_marginTop="@dimen/paddingL">

    <LinearLayout
        android:minWidth="150dp"
        android:gravity="center_vertical"
        android:id="@+id/cardText"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingXL"
        android:paddingEnd="@dimen/paddingXL"
        android:background="@drawable/shape_bg_incoming_bubble"
        >
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true">
        <TextView
            android:textAlignment="textEnd"
            android:minWidth="150dp"
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merhaba DÃ¼nya"
            android:textSize="@dimen/headerXL" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_gravity="end"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.10.2021"
            android:textSize="@dimen/headerL"/>
    </LinearLayout>

</RelativeLayout>