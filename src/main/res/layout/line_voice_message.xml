<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
   >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/gri"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:padding="@dimen/headerL">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/list_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_circle" />

            <TextView
                android:layout_toRightOf="@id/list_image_view"
                android:layout_below="@id/list_title"
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="date"
                android:textColor="@color/buleDark"
                android:textSize="@dimen/headerL"
                />

            <TextView

                android:layout_toRightOf="@id/list_image_view"
                android:id="@+id/list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/headerL"
                android:layout_marginStart="8dp"
                android:text="message" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>