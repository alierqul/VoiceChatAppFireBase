<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/gri"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:padding="@dimen/paddingM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_fullname"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/tv_fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingL"
            android:layout_toRightOf="@id/profile_image"
            android:text="Ali ERGÜL"
            android:textSize="@dimen/headerL"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_email"
            android:layout_below="@id/tv_fullName"
            android:layout_marginStart="@dimen/paddingL"
            android:layout_toRightOf="@id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alierqul@hotmail.cım"
            android:textSize="@dimen/headerL"/>

        <ImageView
            android:id="@+id/btn_message"
            android:layout_marginEnd="@dimen/paddingL"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_message"/>
        <TextView
            android:id="@+id/count"
            android:textSize="@dimen/headerL"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="59"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cirle_background"
            android:layout_width="35dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
