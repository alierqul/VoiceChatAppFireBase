<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VoiceChatApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:checkboxStyle">@color/on_surface</item>
        <item name="android:editTextColor">@color/on_surface</item>
        <item name="android:textColorHint">@color/on_surface</item>
        <item name="android:textColorPrimary">@color/surface</item>
        <item name="android:textColorSecondary">@color/on_background</item>
        <item name="android:textColorTertiary">@color/on_primary</item>
        <item name="android:textColorPrimaryInverse">@color/on_primary</item>
        <item name="android:textColorSecondaryInverse">@color/on_primary</item>
        <item name="android:textColorTertiaryInverse">@color/on_primary</item>

    </style>
    <style name="MyCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/on_surface</item>
        <item name="buttonTint">@color/primary</item>
        <item name="android:textSize">@dimen/headerL</item>
    </style>

</resources>